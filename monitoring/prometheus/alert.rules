# Alert rules for Disease Outbreak Early Warning System
groups:
- name: node_alerts
  rules:
  - alert: HighNodeCPU
    expr: 100 - (avg by(instance) (irate(node_cpu_seconds_total{mode="idle"}[5m])) * 100 > 80
    for: 10m
    labels:
      severity: warning
    annotations:
      summary: "High CPU usage on {{ $labels.instance }}"
      description: "CPU usage is {{ $value }}%"

  - alert: HighNodeMemory
    expr: (node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100 > 85
    for: 10m
    labels:
      severity: warning
    annotations:
      summary: "High memory usage on {{ $labels.instance }}"
      description: "Memory usage is {{ $value }}%"

  - alert: HighNodeDisk
    expr: 100 - (node_filesystem_avail_bytes{mountpoint="/"} * 100 / node_filesystem_size_bytes{mountpoint="/"}) > 85
    for: 10m
    labels:
      severity: warning
    annotations:
      summary: "High disk usage on {{ $labels.instance }}"
      description: "Disk usage is {{ $value }}%"

- name: api_alerts
  rules:
  - alert: HighRequestLatency
    expr: histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le)) > 1
    for: 5m
    labels:
      severity: warning
    annotations:
      summary: "High request latency on API"
      description: "95th percentile request latency is {{ $value }} seconds"

  - alert: HighErrorRate
    expr: rate(http_requests_total{status=~"5.."}[5m]) / rate(http_requests_total[5m]) > 0.05
    for: 5m
    labels:
      severity: critical
    annotations:
      summary: "High error rate on API"
      description: "Error rate is {{ $value }}"

- name: database_alerts
  rules:
  - alert: HighPostgresConnections
    expr: pg_stat_activity_count > 50
    for: 5m
    labels:
      severity: warning
    annotations:
      summary: "High number of PostgreSQL connections"
      description: "{{ $value }} active connections"

  - alert: HighRedisMemoryUsage
    expr: redis_memory_used_bytes / redis_memory_max_bytes * 100 > 85
    for: 10m
    labels:
      severity: warning
    annotations:
      summary: "High Redis memory usage"
      description: "Redis memory usage is {{ $value }}%"

- name: ml_alerts
  rules:
  - alert: HighModelPredictionLatency
    expr: rate(ml_model_prediction_duration_seconds_sum[5m]) / rate(ml_model_prediction_duration_seconds_count[5m]) > 0.5
    for: 10m
    labels:
      severity: warning
    annotations:
      summary: "High model prediction latency"
      description: "Average prediction latency is {{ $value }} seconds"

  - alert: ModelDriftDetected
    expr: abs(ml_model_drift_score) > 0.3
    for: 1h
    labels:
      severity: critical
    annotations:
      summary: "Model drift detected"
      description: "Drift score is {{ $value }}"
